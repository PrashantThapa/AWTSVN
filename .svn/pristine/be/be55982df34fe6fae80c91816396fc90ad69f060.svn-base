.pager {
    width: auto;
    height: 50px;
    padding: 0;
    margin: 0;
    padding-top: 10px;
    padding-left: 10px; /*border-radius: 8px; 	-moz-border-radius: 8px;*/
}

    .pager div.short {
        float: right;
        margin: 0;
        padding: 0;
        margin-right: 10px;
    }

        .pager div.short input {
            width: 30px;
            height: 30px;
            border: none;
            margin-left: 8px;
            float: left;
            azimuth: inherit;
            border: 1px solid #A0A0A0;
        }

    .pager ul {
        list-style: none;
        padding: 0;
        margin: 0;
        float: left;
        margin-right: 4px;
        width: 250px !important;
    }

        .pager ul li {
            display: inline;
            margin-left: 2px;
        }

            .pager ul li a {
                text-decoration: none;
                display: inline-table;
                width: 20px;
                height: 20px;
                text-align: center;
                border-radius: 4px;
                -moz-border-radius: 4px;
                -webkit-border-radius: 4px;
                -o-border-radius: 4px;
                border: 1px solid #A0A0A0;
            }

    .pager span {
        margin-left: 4px;
        color: White;
        float: left;
    }

    .pager .btn {
        border-radius: 4px;
        border: 2px solid #A0A0A0;
        display: inline-table;
        height: 32px;
        text-align: center;
        text-decoration: none;
        width: 32px;
        padding: 4px;
        float: left;
        cursor: pointer;
        margin-left: 3px;
        border-radius: 4px;
        -moz-border-radius: 4px;
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        -o-user-select: none;
        user-select: none;
    }

    .pager .disabled {
        color: #A0A0A0 !important;
        text-shadow: 1px 1px 1px #FFFFFF;
    }
/*green*/ .green {
    background-color: #ECECEC;
    border: 1px solid #ECECEC;
}

    .green.normal {
        /*background-color: #428BCA;
    color: White;*/
        border: solid 1px #EEEEEE;
    }

    .green span {
        color: #036CF9;
        font-weight: normal;
        margin-top: 6px;
    }

    .green.active {
        background-color: #A0A0A0;
        color: #ffffff;
        border: solid 1px #A0A0A0;
    }

.pager.green .btn {
    background-color: #A0A0A0;
    color: #ffffff;
    border: solid 2px #A0A0A0;
}
