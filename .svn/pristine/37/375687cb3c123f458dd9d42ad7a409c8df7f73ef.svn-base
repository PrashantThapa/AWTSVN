using System;
using System.Collections.Generic;
using HRFA.ATT;
using HRFA.COMMON;
using HRFA.DataLayer;
namespace HRFA.BLL
{
    public class BLLEmpSalaryItemRate
    {
        public JsonResponse GetEmpSalaryItemRate(Int32? EmpID)
        {
            JsonResponse response = new JsonResponse();
            DLLEmpSalaryItemRate objDll = new DLLEmpSalaryItemRate();
            try
            {
                response.ResponseData = objDll.GetEmpSalaryItemRate(EmpID);
                response.IsSucess = true;
            }
            catch (Exception ex)
            {
                response.IsSucess = false;
                response.Message = ex.Message;
            }
            return response;
        }
        public JsonResponse GetEmpSalaryItemByEmpID(Int64? EmpID)
        {
            JsonResponse response = new JsonResponse();
            DLLEmpSalaryItemRate objDll = new DLLEmpSalaryItemRate();
            List<ATTEmpSalaryItemRate> lst = new List<ATTEmpSalaryItemRate>();
            try
            {
                lst = objDll.GetEmpSalaryItemRate(EmpID);
                response.ResponseData = lst;
                response.IsSucess = true;
            }
            catch (Exception ex)
            {
                response.IsSucess = false;
                response.Message = ex.Message;
            }
            return response;
        }
    }
}
